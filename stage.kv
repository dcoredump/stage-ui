Stage:

<Stage>: #
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1.0,0.1
        ToggleButton:
            text: "Sound"
            on_state: _screen_manager.current = 'Sound'

        ToggleButton:
            text: "Pedalboard"
            on_state: _screen_manager.current = 'Pedalboard'

        ToggleButton:
            text: "System"
            on_state: _screen_manager.current = 'System'

    BoxLayout:
        orientation: 'vertical'

        ScreenManager:
            id: _screen_manager
            Screen:
                name: 'Sound'
                Label:
                    text: 'Sound'

            Screen:
                name: 'Pedalboard'
                Label:
                    text: 'Pedalboard'

            Screen:
                name: 'System'
                Label:
                    text: 'System'
